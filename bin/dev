#!/usr/bin/env zsh
source ~/.zshrc
title devel
cmd=`echo $@ | awk -F" -- " '{ print $1}'`
[ -z $cmd ] && cmd=tmux
opts=`echo $@ | awk -F" -- " '{ print $2}'`
docker run -e TERM=xterm-256color -e LC_ALL=C.UTF-8 -e DISPLAY=host.docker.internal:0 --hostname devel -v /Users/euk:/home/llp --cap-add SYS_PTRACE --security-opt seccomp:unconfined -p 5000:5000 -it --rm --privileged -w /home/llp/learn/lowlevel --name dev  $=opts azcore/lowlevel $=cmd
